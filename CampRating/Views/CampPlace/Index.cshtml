@model IEnumerable<CampRating.Models.CampPlace>

@{
    ViewData["Title"] = "Camp Places";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Camp Places</h1>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-action="Create" class="btn btn-primary">Add New Camp Place</a>
        }
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(item.Photo))
                    {
                        <img src="@item.Photo" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">
                            <small class="text-muted">
                                Added by @item.User?.UserName on @item.DateCreated.ToString("d")
                            </small>
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                            @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == item.UserId))
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 