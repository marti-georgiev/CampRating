@model CampRating.Models.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    @if (User.IsInRole("Admin"))
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Total Users</h5>
                        <p class="card-text display-4">@Model.TotalUsers</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Camp Places</h5>
                        <p class="card-text display-4">@Model.TotalCampPlaces</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Total Reviews</h5>
                        <p class="card-text display-4">@Model.TotalReviews</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-12">
            <form asp-action="Index" method="get" class="form-inline">
                <div class="input-group w-100 shadow-sm">
                    <input type="text" name="searchString" class="form-control form-control-lg" 
                           placeholder="Search camp places by name..." 
                           value="@ViewData["CurrentFilter"]" />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-search"></i> Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Camp Places</h2>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="CampPlace" asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Add New Camp Place
            </a>
        }
    </div>

    <div class="row">
        @foreach (var item in Model.CampPlaces)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(item.Photo))
                    {
                        <img src="@item.Photo" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-camera fa-3x text-muted"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text text-truncate">@item.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-star text-warning"></i>
                                @if (item.Reviews?.Any() == true)
                                {
                                    <span>@item.Reviews.Average(r => r.Rating).ToString("F1")</span>
                                }
                                else
                                {
                                    <span>No ratings yet</span>
                                }
                            </div>
                            <a asp-controller="CampPlace" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">
                                View Details
                            </a>
                        </div>
                    </div>
                    <div class="card-footer text-muted">
                        <small>Added by @item.User?.UserName on @item.DateCreated.ToString("d")</small>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.CampPlaces.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle"></i> No camp places found
            <p>Be the first to add a camp place!</p>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="CampPlace" asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Camp Place
                </a>
            }
            else
            {
                <p>Please <a asp-controller="Account" asp-action="Login">login</a> to add a camp place.</p>
            }
        </div>
    }
</div> 