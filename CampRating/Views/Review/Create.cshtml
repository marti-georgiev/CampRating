@model CampRating.Models.Review

@{
    ViewData["Title"] = "Create Review";
    var campPlace = ViewBag.CampPlace as CampRating.Models.CampPlace;
    if (campPlace == null)
    {
        <div class="alert alert-danger">Camp place not found.</div>
        return;
    }
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Create Review for @campPlace.Name</h2>
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CampPlaceId" value="@campPlace.Id" />
                
                <div class="form-group mb-3">
                    <label asp-for="Rating" class="control-label">Rating</label>
                    <select asp-for="Rating" class="form-control">
                        <option value="1">1 Star</option>
                        <option value="2">2 Stars</option>
                        <option value="3">3 Stars</option>
                        <option value="4">4 Stars</option>
                        <option value="5">5 Stars</option>
                    </select>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Comment" class="control-label">Comment</label>
                    <textarea asp-for="Comment" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-controller="CampPlace" asp-action="Details" asp-route-id="@campPlace.Id" class="btn btn-secondary">Back to Details</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 